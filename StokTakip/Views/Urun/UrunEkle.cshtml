@model StokTakip.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


    <form method="post" class="form-group">

        <div>
            <label>Ürün Adı</label>
            <input type="text" class="form-control" name="urunad" required="" placeholder="Ürün Adı Giriniz" maxlength="20"/>

        </div>
        <div>
            <label>Marka</label>
            <input type="text" class="form-control" name="marka" placeholder="Marka Giriniz" required=""/>

        </div>
        <div>
            <label>Kategori</label>
           @Html.DropDownListFor(m=>m.TBLKATEGORILER.kategoriid,(List<SelectListItem>)ViewBag.dgr,new {@class= "form-control"})

        </div>
        <div>
            <label>Fiyat</label>
            <input type="text" class="form-control" name="fiyat" />

        </div>
        <div>
            <label>Stok</label>
            <input type="text" class="form-control" name="stok" required="" />

        </div>
        <div style="margin-top:15px">
            <button class="btn btn-info">Ürün Ekle</button>
        </div>
    </form>