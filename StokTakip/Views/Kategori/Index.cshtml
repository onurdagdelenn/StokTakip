@using StokTakip.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>


    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {


            <tr>
                <th>@ktgr.kategoriid</th>
                <td>@ktgr.kategoriad</td>
                <td><a href="/Kategori/Sil/@ktgr.kategoriid" class="btn btn-danger">SİL</a></td>
                <td><a href="/Kategori/KategoriGetir/@ktgr.kategoriid" class="btn btn-success">GÜNCELLE</a></td>

            </tr>

        }


    </tbody>


</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Kategori/YeniKategori/" class="btn btn-primary">Yeni Kategori Ekle</a>
